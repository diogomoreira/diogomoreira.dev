(
    echo 'ğŸ¤® ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
    false;
)

# Check tsconfig standards
npm run check-types ||
(
    echo 'âŒ  Failed Type check. Make the changes required above.'
    false;
)

# If everything passes... Now we can push
echo 'âœ…  Everything is right... commiting'
